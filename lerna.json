{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "main",
        "canary"
      ],  
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "0.0.1-alpha.0"
}
