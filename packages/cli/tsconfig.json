{
  "include": ["src/**/*"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2020"],
    "target": "ES2022",
    "module": "ES2022",
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true
  }
}
